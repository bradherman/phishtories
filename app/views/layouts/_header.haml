%nav.navbar.navbar-dark.bg-inverse
  = link_to "phishtories", root_path, class: "navbar-brand"

  %ul.nav.navbar-nav.pull-xs-right
    %li.nav-item.active
      = link_to root_path, class: 'nav-link' do
        Home
        %span.sr-only (current)
    %li.nav-item
      = link_to "About", about_path, class: 'nav-link'
    %li.nav-item
      - if current_user
        = link_to "Logout", destroy_user_session_path, class: 'nav-link'
      - else
        = link_to "Login", new_user_session_path, class: 'nav-link'

  / %form.form-inline.pull-xs-right
  /   %input.form-control{ type: "text", placeholder: "Search" }
  /   %button.btn.btn-success-outline{ type: "submit" } Search
